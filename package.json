{
  "name": "HashChecker",
  "version": "1.0.5",
  "description": "A free, use mateial design, open source, easy-to-use hash checker.",
  "main": "index.js",
  "scripts": {
    "start": "electron ./",
    "build": "electron-builder -w",
    "buildm": "electron-builder -m --universal"
  },
  "build": {
    "appId": "Hash Checker",
    "productName": "Hash Checker",
    "copyright": "Copyright Â© 2019-2023 Super12138",
    "win": {
      "icon": "build/AppIcon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "deleteAppDataOnUninstall": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "build/AppIcon.icns",
      "category": "com.Super12138.HashChecker",
      "darkModeSupport": true,
      "target": [
        {
          "arch": "universal",
          "target": "dmg"
        },
        {
          "arch": "x64",
          "target": "dmg"
        },
        {
          "arch": "arm64",
          "target": "dmg"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Super12138",
        "repo": "Hash-Checker",
        "channel": "latest",
        "releaseType": "draft"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Super12138/Hash-Checker.git"
  },
  "keywords": [
    "security",
    "crypto",
    "Hash",
    "MD5",
    "SHA256"
  ],
  "author": "Super12138",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Super12138/Hash-Checker/issues"
  },
  "homepage": "https://github.com/Super12138/Hash-Checker#readme",
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^24.1.2",
    "electron-builder": "^23.6.0"
  }
}
