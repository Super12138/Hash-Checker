{
    "$schema": "https://schema.tauri.app/config/2.5.1",
    "productName": "Super Hash",
    "mainBinaryName": "Super Hash",
    "version": "4.0.0",
    "identifier": "cn.super12138.hash",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "npm run build:desktop",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "Super Hash",
                "width": 1024,
                "height": 768,
                "dragDropEnabled": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "category": "Utility",
        "publisher": "Super12138",
        "shortDescription": "生成和校验哈希值",
        "longDescription": "一个快速、随时可用，且遵循 Material Design 3 的跨平台文件校验器",
        "active": true,
        "targets": "all",
        "createUpdaterArtifacts": true,
        "icon": [
            "assets/icons/32x32.png",
            "assets/icons/128x128.png",
            "assets/icons/128x128@2x.png",
            "assets/icons/icon.icns",
            "assets/icons/icon.ico"
        ],
        "windows": {
            "allowDowngrades": true,
            "nsis": {
                "languages": ["SimpChinese", "English"],
                "displayLanguageSelector": true,
                "installMode": "both",
                "sidebarImage": "assets/installer/nsis/leftimage.bmp",
                "installerIcon": "assets/icons/icon.ico"
            },
            "webviewInstallMode": {
                "silent": true,
                "type": "downloadBootstrapper"
            },
            "wix": {
                "language": ["zh-CN", "en-US"]
            }
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE1MUYwRjI3ODlBNDgwRTcKUldUbmdLU0pKdzhmcGQwL2dJSUU1dmdCYkVOZFFKbmxuU1huSUM3NVUwN2I5ZEN3bGxJTE1sUjEK",
            "endpoints": [
                "https://github.com/Super12138/Hash-Checker/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
